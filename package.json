{
  "name": "nova-elastomer",
  "description": "Web component for commonjs envrionnement",
  "version": "1.28.0",
  "author": "Jean Ponchon <jean.ponchon@novadiscovery.com>",
  "repository": {
    "type": "git",
    "url": "http://git.novadiscovery.net/webco/elastomer.git"
  },
  "licenses": [
    {
      "type": "Copyright Novadiscovery",
      "url": "http://www.novadiscovery.com/"
    }
  ],
  "main": "lib/index",
  "engines": {
    "node": ">= 0.10"
  },
  "scripts": {
    "test": "kawa test/elastomer.test.js -t cssy -t htmly -t babelify --phantom --reporter spec",
    "monitor": "kawa test/elastomer.test.js -t cssy -t htmly -t babelify --reporter spec --watch",
    "matrix": "kawa test/elastomer.test.js -t cssy -t htmly -t babelify --reporter matrix --watch",
    "standard": "./node_modules/.bin/standard"
  },
  "dependencies": {
    "babel-runtime": "^5.8.34",
    "babelify": "^6.4.0",
    "debug": "*",
    "evenity": "^1.0.0",
    "extend": "^2.0.0",
    "sprintf-js": "^1.0.2"
  },
  "devDependencies": {
    "cssy": "^1.1.2",
    "expect.js": "*",
    "htmly": "^1.1.0",
    "kawa": "^0.4.4",
    "mocha": "*",
    "standard": "^3.11.0"
  },
  "keywords": [
    "webcomponent",
    "component",
    "browserify"
  ],
  "standard": {
    "ignore": [
      "**/webcomponents-lite.js",
      "**/sandbox/**",
      "**/test/**"
    ]
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "optional": "runtime"
        }
      ]
    ]
  }
}